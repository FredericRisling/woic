---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Hero from '../../components/ui/Hero.astro';
import Section from '../../components/ui/Section.astro';
import Card from '../../components/ui/Card.astro';

const lang = 'en';
---

<BaseLayout
  title="Contact"
  description="Get in touch with us"
  lang={lang}
>
  <Header slot="default-header" lang={lang} />

  <Hero
    title="Contact"
    subtitle="We'd love to hear from you"
  />

  <Section>
    <div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
      <div>
        <h2 class="text-2xl font-bold mb-6 text-neutral-900 dark:text-neutral-100">
          Contact Information
        </h2>

        <div class="space-y-6">
          <Card>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div>
                <h3 class="font-bold text-neutral-900 dark:text-neutral-100 mb-1">Address</h3>
                <p class="text-neutral-600 dark:text-neutral-400">
                  123 Sample Street<br>
                  12345 Sample City<br>
                  Germany
                </p>
              </div>
            </div>
          </Card>

          <Card>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <div>
                <h3 class="font-bold text-neutral-900 dark:text-neutral-100 mb-1">Phone</h3>
                <p class="text-neutral-600 dark:text-neutral-400">
                  <a href="tel:+491234567890" class="hover:text-primary-600 dark:hover:text-primary-400">
                    +49 (0) 123 456 7890
                  </a>
                </p>
              </div>
            </div>
          </Card>

          <Card>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <div>
                <h3 class="font-bold text-neutral-900 dark:text-neutral-100 mb-1">Email</h3>
                <p class="text-neutral-600 dark:text-neutral-400">
                  <a href="mailto:info@example.com" class="hover:text-primary-600 dark:hover:text-primary-400">
                    info@example.com
                  </a>
                </p>
              </div>
            </div>
          </Card>

          <Card>
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h3 class="font-bold text-neutral-900 dark:text-neutral-100 mb-1">Office Hours</h3>
                <p class="text-neutral-600 dark:text-neutral-400">
                  Monday - Friday: 9:00 AM - 5:00 PM<br>
                  Saturday - Sunday: By appointment
                </p>
              </div>
            </div>
          </Card>
        </div>
      </div>

      <div>
        <h2 class="text-2xl font-bold mb-6 text-neutral-900 dark:text-neutral-100">
          Directions
        </h2>
        <Card>
          <div class="aspect-video bg-neutral-200 dark:bg-neutral-800 rounded-lg flex items-center justify-center mb-4">
            <p class="text-neutral-500 dark:text-neutral-400">
              Map will be integrated here
            </p>
          </div>
          <div class="prose dark:prose-invert max-w-none">
            <h4>By Public Transportation</h4>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              Bus Line 10, stop "Musterplatz"<br>
              S-Bahn Line S1, station "Hauptbahnhof" (10 min walk)
            </p>

            <h4>Parking</h4>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              Free parking is available directly at the church.
            </p>
          </div>
        </Card>
      </div>
    </div>
  </Section>

  <Footer slot="default-footer" lang={lang} />
</BaseLayout>
