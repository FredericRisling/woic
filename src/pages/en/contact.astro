---
import { getEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Hero from '../../components/ui/Hero.astro';
import Section from '../../components/ui/Section.astro';
import Card from '../../components/ui/Card.astro';
import GoogleMap from '../../components/ui/GoogleMap.astro';

const lang = 'en';
const pageData = await getEntry('pages', `${lang}/contact`);
const globalData = await getEntry('global', lang)!;

const icons = {
  location: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />',
  phone: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />',
  email: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />',
  clock: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />'
};
---

<BaseLayout
  title={pageData.data.meta.title}
  description={pageData.data.meta.description}
  lang={lang}
>
  <Header slot="default-header" lang={lang} />

  <Hero
    title={pageData.data.hero.title}
    subtitle={pageData.data.hero.subtitle}
  />

  <Section>
    <div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
      <div>
        <h2 class="text-2xl font-bold mb-6 text-neutral-900 dark:text-neutral-100">
          Contact Information
        </h2>

        <div class="space-y-6">
          {pageData.data.sections[0].contactInfo.map(info => (
            <Card>
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-primary-600 dark:text-primary-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[info.icon]} />
                <div>
                  <h3 class="font-bold text-neutral-900 dark:text-neutral-100 mb-1">{info.title}</h3>
                  <p class="text-neutral-600 dark:text-neutral-400" set:html={info.content} />
                </div>
              </div>
            </Card>
          ))}
        </div>
      </div>

      <div>
        <h2 class="text-2xl font-bold mb-6 text-neutral-900 dark:text-neutral-100">
          {pageData.data.sections[0].directions.title}
        </h2>
        <Card>
          <GoogleMap
            address="AmendestraÃŸe 15, 13409 Berlin, Germany"
            buttonText={pageData.data.sections[0].directions.mapButtonText}
          />
          <div class="prose dark:prose-invert max-w-none">
            <h4>{pageData.data.sections[0].directions.publicTransport.title}</h4>
            <p class="text-sm text-neutral-600 dark:text-neutral-400" set:html={pageData.data.sections[0].directions.publicTransport.content} />

            <h4>{pageData.data.sections[0].directions.parking.title}</h4>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {pageData.data.sections[0].directions.parking.content}
            </p>
          </div>
        </Card>
      </div>
    </div>
  </Section>

  {(globalData.data.social?.youtube || globalData.data.social?.facebook || globalData.data.social?.instagram) && (
    <Section background="gray">
      <div class="max-w-5xl mx-auto text-center">
        <h2 class="text-2xl font-bold mb-6 text-neutral-900 dark:text-neutral-100">
          Follow Us
        </h2>
        <div class="flex justify-center items-center space-x-6">
          {globalData.data.social?.youtube && (
            <a
              href={globalData.data.social.youtube}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="YouTube"
              class="flex flex-col items-center text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              <svg class="w-8 h-8 mb-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
              <span class="text-sm font-medium">YouTube</span>
            </a>
          )}
          {globalData.data.social?.facebook && (
            <a
              href={globalData.data.social.facebook}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Facebook"
              class="flex flex-col items-center text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              <svg class="w-8 h-8 mb-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
              <span class="text-sm font-medium">Facebook</span>
            </a>
          )}
          {globalData.data.social?.instagram && (
            <a
              href={globalData.data.social.instagram}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Instagram"
              class="flex flex-col items-center text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              <svg class="w-8 h-8 mb-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
              </svg>
              <span class="text-sm font-medium">Instagram</span>
            </a>
          )}
        </div>
      </div>
    </Section>
  )}

  <Footer slot="default-footer" lang={lang} />
</BaseLayout>
