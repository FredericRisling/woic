---
import { getEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Hero from '../../components/ui/Hero.astro';
import Section from '../../components/ui/Section.astro';
import Card from '../../components/ui/Card.astro';
import GoogleMap from '../../components/ui/GoogleMap.astro';

const lang = 'de';
const pageData = await getEntry('pages', `${lang}/contact`);

const icons = {
  location: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />',
  phone: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />',
  email: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />',
  clock: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />'
};
---

<BaseLayout
  title={pageData.data.meta.title}
  description={pageData.data.meta.description}
  lang={lang}
>
  <Header slot="default-header" lang={lang} />

  <Hero
    title={pageData.data.hero.title}
    subtitle={pageData.data.hero.subtitle}
  />

  <Section>
    <div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
      <div>
        <h2 class="text-2xl font-bold mb-6 text-neutral-900 dark:text-neutral-100">
          Kontaktinformationen
        </h2>

        <div class="space-y-6">
          {pageData.data.sections[0].contactInfo.map(info => (
            <Card>
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-primary-600 dark:text-primary-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[info.icon]} />
                <div>
                  <h3 class="font-bold text-neutral-900 dark:text-neutral-100 mb-1">{info.title}</h3>
                  <p class="text-neutral-600 dark:text-neutral-400" set:html={info.content} />
                </div>
              </div>
            </Card>
          ))}
        </div>
      </div>

      <div>
        <h2 class="text-2xl font-bold mb-6 text-neutral-900 dark:text-neutral-100">
          {pageData.data.sections[0].directions.title}
        </h2>
        <Card>
          <GoogleMap
            address="AmendestraÃŸe 15, 13409 Berlin, Germany"
            buttonText={pageData.data.sections[0].directions.mapButtonText}
          />
          <div class="prose dark:prose-invert max-w-none">
            <h4>{pageData.data.sections[0].directions.publicTransport.title}</h4>
            <p class="text-sm text-neutral-600 dark:text-neutral-400" set:html={pageData.data.sections[0].directions.publicTransport.content} />

            <h4>{pageData.data.sections[0].directions.parking.title}</h4>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {pageData.data.sections[0].directions.parking.content}
            </p>
          </div>
        </Card>
      </div>
    </div>
  </Section>

  <Footer slot="default-footer" lang={lang} />
</BaseLayout>
