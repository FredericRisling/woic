---
import { getEntry } from 'astro:content';

interface Props {
  lang: 'de' | 'en';
}

const { lang } = Astro.props;
const globalData = await getEntry('global', lang);

const currentYear = new Date().getFullYear();
const copyright = globalData.data.footer.copyright.replace('{year}', currentYear.toString());
---

<footer class="bg-neutral-50 dark:bg-neutral-800 border-t border-neutral-200 dark:border-neutral-700 mt-auto">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Contact Information -->
      <div>
        <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100 mb-3">
          {globalData.data.footer.legal.contact}
        </h3>
        <address class="text-neutral-600 dark:text-neutral-400 not-italic text-sm space-y-1">
          {globalData.data.footer.contact.address.map(line => (
            <p>{line}</p>
          ))}
          <p class="mt-2">
            <a href={`mailto:${globalData.data.footer.contact.email}`} class="hover:text-primary-600 dark:hover:text-primary-400">
              {globalData.data.footer.contact.email}
            </a>
          </p>
          <p>
            <a href={`tel:${globalData.data.footer.contact.phone.replace(/\s/g, '')}`} class="hover:text-primary-600 dark:hover:text-primary-400">
              {globalData.data.footer.contact.phone}
            </a>
          </p>
        </address>
      </div>

      <!-- About Section -->
      <div>
        <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100 mb-3">
          {lang === 'de' ? 'Ãœber uns' : 'About Us'}
        </h3>
        <p class="text-neutral-600 dark:text-neutral-400 text-sm mb-4">
          {globalData.data.footer.about}
        </p>

        <!-- Social Media Links -->
        {globalData.data.social?.youtube && (
          <div>
            <a
              href={globalData.data.social.youtube}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-sm text-primary-600 dark:text-primary-400 hover:underline"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
              YouTube
            </a>
          </div>
        )}
      </div>

      <!-- Legal Links -->
      <div>
        <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100 mb-3">
          {lang === 'de' ? 'Rechtliches' : 'Legal'}
        </h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href={`/woic/${lang}/privacy`} class="text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400">
              {globalData.data.footer.legal.privacy}
            </a>
          </li>
          <li>
            <a href={`/woic/${lang}/imprint`} class="text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400">
              {globalData.data.footer.legal.imprint}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-neutral-200 dark:border-neutral-700 text-center">
      <p class="text-sm text-neutral-500 dark:text-neutral-400">{copyright}</p>
    </div>
  </div>
</footer>
