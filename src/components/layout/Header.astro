---
interface Props {
  lang: 'de' | 'en';
}

const { lang } = Astro.props;

const churchName = {
  de: 'Kirche Name',
  en: 'Church Name'
};
---

<header class="bg-white dark:bg-neutral-900 shadow-sm border-b border-neutral-200 dark:border-neutral-700">
  <div class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Church Name/Logo -->
      <div class="flex items-center space-x-3">
        <div class="text-2xl text-primary-500 dark:text-primary-400">üèõÔ∏è</div>
        <h1 class="text-xl font-bold text-neutral-900 dark:text-neutral-100">
          {churchName[lang]}
        </h1>
      </div>

      <!-- Navigation Placeholder -->
      <nav class="hidden md:block">
        <div class="text-sm text-neutral-500 dark:text-neutral-400">
          Navigation coming soon
        </div>
      </nav>

      <!-- Language Switcher Placeholder -->
      <div class="flex items-center space-x-2">
        <span class="text-sm font-medium text-neutral-700 dark:text-neutral-300 uppercase">{lang}</span>
      </div>
    </div>
  </div>
</header>
