---
interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}

const { size = 'lg', class: className = '' } = Astro.props;

const sizeClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-7xl',
  xl: 'max-w-[1400px]',
};
---

<div class={`container mx-auto px-4 ${sizeClasses[size]} ${className}`.trim()}>
  <slot />
</div>
