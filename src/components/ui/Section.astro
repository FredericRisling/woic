---
interface Props {
  title?: string;
  subtitle?: string;
  background?: 'white' | 'gray' | 'primary';
  class?: string;
}

const { title, subtitle, background = 'white', class: className = '' } = Astro.props;

const bgClasses = {
  white: 'bg-white dark:bg-neutral-900',
  gray: 'bg-neutral-50 dark:bg-neutral-800',
  primary: 'bg-primary-50 dark:bg-primary-900/20',
};
---

<section class={`py-16 ${bgClasses[background]} ${className}`.trim()}>
  <div class="container mx-auto px-4">
    {title && (
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 dark:text-neutral-100 mb-4">
          {title}
        </h2>
        {subtitle && (
          <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-2xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>
